<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <div class="box" id="heading">
    <h1> <%= kindOfDay%>!</h1>
  </div>

  <div class="box">

    <% newToDoItem.forEach(function(singleItem){ %>
      <form action="/delete" method="post">

    <div class="item">
      <input type="checkbox" name = "checkbox" value="<%= singleItem._id%>" onchange="this.form.submit()">
      <input type="hidden" name = "listName" value="<%= kindOfDay%>">
      <p><%= singleItem.name %></p>
    </div>

      </form>
    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item">
      <button type="submit" name="list" value="<%= kindOfDay %>">+</button>
    </form>

  </div>



</body>

</html>
